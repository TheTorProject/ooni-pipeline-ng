#!/bin/sh
# postinst script for analysis

set -e

case "$1" in
    configure)
        addgroup --system --quiet fastpath
        adduser --system --quiet --ingroup fastpath --no-create-home --home /var/lib/fastpath fastpath
        mkdir -p /var/lib/analysis
        chown fastpath /var/lib/analysis
        # Enable Nginx site. The conf is deployed from debian/analysis.conf by debian/install
        if [ ! -f /etc/nginx/sites-enabled/analysis.conf ]
        then
          ln -s -t /etc/nginx/sites-enabled/ /etc/nginx/sites-available/analysis.conf
          nginx -t
          systemctl reload nginx
        fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
